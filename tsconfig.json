{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "dom"],
    "declaration": true,
    "declarationDir": "./dist/types/",
    "sourceMap": true,
    "outDir": "./dist/lib",
    "strict": true,
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": ["src"]
}
