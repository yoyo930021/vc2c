{
  "compilerOptions": {
    "incremental": true,
    "target": "es2018",
    "module": "ESNext",
    "lib": [
      "es2018",
      "dom"
    ],
    "declaration": true,
    "declarationDir": "./dist/types",
    "sourceMap": true,
    "outDir": "./dist/lib",
    "strict": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "tests"
  ]
}
